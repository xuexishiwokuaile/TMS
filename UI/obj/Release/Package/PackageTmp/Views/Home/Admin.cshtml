@*search*@

<div class="layui-form-item">
    <label class="layui-form-label" style="width:auto">
        人员名称
    </label>
    <div class="layui-input-inline">
        <input class="layui-input" placeholder="输入名称/电话" />
    </div>

    <label class="layui-form-label" style="width:auto">
        注册时间
    </label>
    <div class="layui-inline">
        <input type="text" class="layui-input" id="date" placeholder="请选择时间">
    </div>
    <script>
        layui.use('laydate', function () {
            var laydate = layui.laydate;
            //单控件
            laydate.render({
                elem: '#date'

                , isInitValue: false
                , format: 'yyyyMMdd'
                , ready: function (date) {
                    console.log(date);
                }
                , done: function (value, date, endDate) {
                    console.log(value, date, endDate);
                }
            });
        });
    </script>
    <button class="layui-btn" style="background-color:#1990FF">查询</button>



</div>
<br />

@*table*@
<div class="layui-btn-group inoutTable" style="margin-left:20px;">
    <button class="layui-btn layui-btn-radius demo" data-type="add" style="background-color:#FF9800;margin-left:20px;"><i class="layui-icon layui-icon-addition"></i>添加人员</button>
    <button class="layui-btn layui-btn-radius" data-type="delete" style="background-color:#FF5157;"><i class="layui-icon layui-icon-subtraction"></i>批量删除</button>
</div>
<br />
<br />
<br />
<div class="layui-form-item" style="margin-left:20px;">
    <table class="layui-table" lay-filter="inout" lay-data="{width: 1000, height:330, url:'', page:true, id:'inout'}" style="margin-left:-10px;">
        <thead>
            <tr>
                <th lay-data="{type:'checkbox', fixed: 'left'}"></th>
                <th lay-data="{field:'id', width:80, sort: true, fixed: true}">ID</th>
                <th lay-data="{field:'name', width:80}">姓名</th>
                <th lay-data="{field:'family', width:80, sort: true}">性别</th>
                <th lay-data="{field:'model', width:80}">注册手机</th>
                <th lay-data="{field:'detail', width:160,sort:true}">注册时间</th>
                <th lay-data="{field:'time', width:100}">地址</th>
                <th lay-data="{field:'state', width:80}">状态</th>
                <th lay-data="{field:'operate', width:135}">操作</th>
            </tr>
        </thead>
    </table>
</div>




<div id="pagesplit" style="margin:auto auto auto 100px;"></div>

<script id="barInout" type="text/html">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<script>
    layui.use('table', function () {
        var table = layui.table;
        //监听表格复选框选择
        table.on('checkbox(inout)', function (obj) {
            console.log(obj)
        });
        //监听工具条
        table.on('tool(demo)', function (obj) {
            var data = obj.data;
            if (obj.event === 'detail') {
                layer.msg('ID：' + data.id + ' 的查看操作');
            } else if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    obj.del();
                    layer.close(index);
                });
            } else if (obj.event === 'edit') {
                layer.alert('编辑行：<br>' + JSON.stringify(data))
            }
        });



        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
    });

</script>

<script>
    layui.use(['laypage', 'layer'], function () {
        var laypage = layui.laypage
            , layer = layui.layer;



        //完整功能
        laypage.render({
            elem: 'pagesplit'
            , count: 100
            , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
            , jump: function (obj) {
                console.log(obj)
            }
        });


    });
</script>



@*AddPeople*@
<script>
    layui.use('layer', function () {
        var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句

        //触发事件
        var active = {
            add: function () {
                layer.open({
                    title: '添加类别',
                    type: 1,
                    area: ['600px', '650px'],
                    content: $('#addPeople')
                });
            }

        };
        $('.demo').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
    });
</script>



